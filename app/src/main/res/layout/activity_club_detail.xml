<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragment.ClubFragment.ClubDetail"
    android:orientation="vertical">
    <!--    tools:context=""-->

    <RelativeLayout
        android:id="@+id/tv_detailstadium"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_detailimagestadium"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/stadion" />

        <TextView
            android:id="@+id/tv_detailnamastadium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stadium"
            android:textColor="#FAF9F8"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:fontFamily="@font/margarine"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/iv_detaillogo"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:foregroundGravity="center"
            android:padding="10dp"
            android:layout_marginLeft="120dp"
            android:layout_below="@id/tv_detailnamastadium"
            android:src="@drawable/team2" />

        <TextView
            android:id="@+id/tv_detailnama"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="CHELSEA"
            android:textAlignment="center"
            android:textSize="20sp"
            android:fontFamily="@font/margarine"
            android:background="#E4413D"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FAF6F6"
            android:layout_below="@id/iv_detaillogo"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center">
        <TextView
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="Form Years"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_below="@id/tv_detailform"/>

        <TextView
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:text="Kapasitas Stadium"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/tv_detailjmlstadium"
            android:gravity="center"
            android:layout_toRightOf="@id/iv_detailjersey"/>

            <TextView
                android:id="@+id/tv_detailform"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:text="1870"
                android:gravity="center"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="#E53935"
                android:fontFamily="@font/margarine"/>
            <ImageView
                android:id="@+id/iv_detailjersey"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_toRightOf="@id/tv_detailform"
                android:scaleType="fitXY"
                android:padding="10dp"/>

        <TextView
            android:id="@+id/tv_detailjmlstadium"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/margarine"
            android:gravity="center"
            android:textColor="#E53935"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_detailjersey"
            android:text="60.000"
            android:textSize="25sp" />

    </RelativeLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/tv_detaildesc"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="DESKRIPSI CLUB"
         android:textAlignment="center"
         android:textColor="#FFFEFE"
         android:textStyle="bold"
         android:background="#E53935"
         android:fontFamily="@font/margarine"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_detaildesc"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/adamina"
            android:textAlignment="textStart"
            android:textSize="13sp"
            android:justificationMode="inter_word"
            android:text="@string/deskripsi"
            tools:targetApi="o" />
    </ScrollView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESKRIPSI STADIUM"
            android:textAlignment="center"
            android:textColor="#FFFDFD"
            android:textStyle="bold"
            android:background="#E53935"
            android:fontFamily="@font/margarine"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:id="@+id/tv_detaildescstadium"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:fontFamily="@font/adamina"
        android:textAlignment="textStart"
        android:textSize="13sp"
            android:justificationMode="inter_word"
        android:text="@string/deskripsi"
            tools:targetApi="o" />
    </ScrollView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#FFB300" />



    </LinearLayout>
</ScrollView>
</LinearLayout>
